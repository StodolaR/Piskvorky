<UserControl x:Class="Piskvorky.PlayBoard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Piskvorky"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Canvas x:Name="canBoard" />
        <Button x:Name="btnStav" Content="Stav" HorizontalAlignment="Right" VerticalAlignment="Top" Click="btnStav_Click"/>
        <TextBlock HorizontalAlignment="Right" x:Name="tbTest" VerticalAlignment="Center"/>
        <Button x:Name="btnPlayer" Content="Zmen hrace" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="btnPlayer_Click"/>
    </Grid>
</UserControl>
